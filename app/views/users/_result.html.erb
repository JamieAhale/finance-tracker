<div class="mt-3 row">
  <div class="col-5">
    <%= render 'layouts/messages' %>
  </div>
</div>

<% if @stock %>
  <div class="card card-header mt-3" style="display: inline-block;">
    <div class="d-flex flex-row align-items-center">
      <div class='mr-2'><strong> Symbol: </strong> <%= @stock.ticker %></div>
      <div class='mr-2'><strong> Name: </strong> <%= @stock.name %></div>
      <div><strong> Price: </strong> <%= @stock.last_price %></div>
    </div>
  </div>
<% end %>