<h1 class="pb-5 pt-3">My Portfolio</h1>

<h3 class="pt-5 pl-2"> Search Stocks </h3>

<%= form_with(url: search_stock_path, method: :get, local: false) do |form| %>
  <div class="row">
    <div class="col-9">
      <%= form.text_field :stock, placeholder: "Stock name or ticker", class: 'col-12 form-control form-control-lg' %>
    </div>
    <div class="col-sm-3 center">
      <%= form.submit "Search", class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>

<div id="results">

</div>

<%= render 'users/result' %>

