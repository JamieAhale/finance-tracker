<div class="row mt-3">
  <div class="col-6">
    <table class="table table-striped table-hover table-bordered">
      <thead>
        <tr>
          <th scope="col"></th> <!-- Empty header for the drag handle -->
          <th scope="col">Ticker</th>
          <th scope="col">Price</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody id="stocks-table-body">
        <% @stocks.each do |stock| %>
          <% if stock %>
            <tr>
              <td class="drag-handle">&#x2630;</td> 
              <td><%= stock[:ticker] %></td>
              <td>
                  <%= stock[:last_price] %>
              </td>
              <td>
								<%= form_with url: delete_ticker_from_user_path(id: @user.id, ticker: stock[:ticker]), method: :delete do |form| %>
									<%= form.submit "Remove from Portfolio", class: "btn btn-danger" %>
								<% end %>
							</td>
            </tr>
          <% else %>
            <tr>
              <td colspan="5">Error: Stock info not available. API call limit reached</td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

